<h1 class="mb-4">Produtos Disponíveis</h1>

{{#if temProdutos}}
<div class="row">
  {{#each produtos}}
  <div class="col-md-3 mb-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">{{this.nome}}</h5>
        <p class="card-text">
          <strong>Preço:</strong> R$ {{this.preco}}<br>
          <strong>Estoque:</strong> 
          {{#if this.estoque}}
            <span class="badge badge-success">{{this.estoque}} unidades</span>
          {{else}}
            <span class="badge badge-danger">Esgotado</span>
          {{/if}}
        </p>
        <div class="d-flex gap-2">
          <a href="/produto/{{this._id}}" class="btn btn-info btn-sm">Detalhes</a>
          {{#if this.estoque}}
            <a href="/comprar/{{this._id}}" class="btn btn-success btn-sm">Comprar</a>
          {{else}}
            <button class="btn btn-secondary btn-sm" disabled>
              <i class="bi bi-cart-x"></i> Indisponível
            </button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div class="alert alert-warning" role="alert">
  Nenhum produto disponível. <a href="/povoamento" class="alert-link">Clique aqui</a> para povoar o banco de dados.
</div>
{{/if}}
