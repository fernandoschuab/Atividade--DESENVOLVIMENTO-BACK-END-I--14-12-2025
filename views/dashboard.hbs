  /* Estilo adicional elegante para o dashboard */
  body {
    background-color: var(--color-cream);
  }
  
  h1 {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }
  
  .table-elegant tbody tr:last-child {
    border-bottom: none !important;
  }
  
