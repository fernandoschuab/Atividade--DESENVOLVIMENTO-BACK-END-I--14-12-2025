<div class="mb-4">
  <h1 style="color: var(--color-primary-700); font-weight: 600; letter-spacing: -0.5px;">
    <i class="bi bi-speedometer2"></i> Dashboard de Produtos
  </h1>
  <p style="color: var(--color-slate); font-size: 1rem;">Visão geral do catálogo e estatísticas</p>
</div>

<div class="row">
  <!-- Card: Total de Produtos -->
  <div class="col-md-3 mb-4">
    <div class="card card-dashboard-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-2" style="opacity: 0.9; font-weight: 500;">Total de Produtos</h6>
            <h2 class="mb-0" style="font-weight: 700;">{{totalProdutos}}</h2>
          </div>
          <div>
            <i class="bi bi-box-seam" style="font-size: 3rem; opacity: 0.3;"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Card: Produtos com Baixo Estoque -->
  <div class="col-md-3 mb-4">
    <div class="card card-dashboard-danger text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-2" style="opacity: 0.9; font-weight: 500;">Baixo Estoque</h6>
            <h2 class="mb-0" style="font-weight: 700;">{{baixoEstoque}}</h2>
            <p class="card-text mb-0 mt-2" style="font-size: 0.85rem; opacity: 0.85;">
              <i class="bi bi-exclamation-triangle"></i> Menos de 10 unidades
            </p>
          </div>
          <div>
            <i class="bi bi-exclamation-octagon" style="font-size: 3rem; opacity: 0.3;"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Card: Computadores -->
  <div class="col-md-3 mb-4">
    <div class="card card-dashboard-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-2" style="opacity: 0.9; font-weight: 500;">Computadores</h6>
            <h2 class="mb-0" style="font-weight: 700;">{{computadores}}</h2>
          </div>
          <div>
            <i class="bi bi-laptop" style="font-size: 3rem; opacity: 0.3;"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Card: Dispositivos Móveis -->
  <div class="col-md-3 mb-4">
    <div class="card card-dashboard-info text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-2" style="opacity: 0.9; font-weight: 500;">Dispositivos Móveis</h6>
            <h2 class="mb-0" style="font-weight: 700;">{{dispositivosMoveis}}</h2>
          </div>
          <div>
            <i class="bi bi-phone" style="font-size: 3rem; opacity: 0.3;"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-12">
    <div class="card card-elegant shadow-sm">
      <div class="card-header" style="background: linear-gradient(135deg, var(--color-warning-100) 0%, var(--color-warning-50) 100%); border-bottom: 2px solid var(--color-warning-200); border-radius: 16px 16px 0 0;">
        <h4 class="mb-0" style="color: var(--color-warning-800); font-weight: 600;">
          <i class="bi bi-bar-chart-fill"></i> Produtos por Faixa de Preço
        </h4>
      </div>
      <div class="card-body p-0">
        <table class="table table-elegant table-hover mb-0">
          <thead>
            <tr>
              <th><i class="bi bi-tag"></i> Faixa de Preço</th>
              <th><i class="bi bi-boxes"></i> Quantidade de Produtos</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="color: var(--color-charcoal); font-weight: 500;">
                <i class="bi bi-currency-dollar" style="color: var(--color-success-500);"></i> 
                R$ 0,00 - R$ 100,00
              </td>
              <td>
                <span class="badge badge-secondary rounded-pill" style="font-size: 0.95rem;">
                  {{preco0a100}}
                </span>
              </td>
            </tr>
            <tr>
              <td style="color: var(--color-charcoal); font-weight: 500;">
                <i class="bi bi-currency-dollar" style="color: var(--color-info-500);"></i> 
                R$ 101,00 - R$ 1.000,00
              </td>
              <td>
                <span class="badge badge-secondary rounded-pill" style="font-size: 0.95rem;">
                  {{preco101a1000}}
                </span>
              </td>
            </tr>
            <tr>
              <td style="color: var(--color-charcoal); font-weight: 500;">
                <i class="bi bi-currency-dollar" style="color: var(--color-warning-500);"></i> 
                R$ 1.001,00 - R$ 5.000,00
              </td>
              <td>
                <span class="badge badge-secondary rounded-pill" style="font-size: 0.95rem;">
                  {{preco1001a5000}}
                </span>
              </td>
            </tr>
            <tr>
              <td style="color: var(--color-charcoal); font-weight: 500;">
                <i class="bi bi-currency-dollar" style="color: var(--color-danger-500);"></i> 
                Acima de R$ 5.000,00
              </td>
              <td>
                <span class="badge badge-secondary rounded-pill" style="font-size: 0.95rem;">
                  {{precoAcima5000}}
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <a href="/" class="btn btn-secondary btn-lg">
    <i class="bi bi-arrow-left-circle me-2"></i> Voltar para Produtos
  </a>
</div>

